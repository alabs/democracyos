.forum
  .title.pull-left
    p
      a.url(href=forum.url): strong= forum.title
    a.url(href=forum.url)= forum.url
  .actions.pull-right
    a(href='#{forum.url}admin')
      i.glyphicon.glyphicon-cog
    span.btn-remove
      i.glyphicon.glyphicon-trash
  .status.creating
    .loader-wrapper: .loader
    p= t('forum.status.creating')
  .status.destroying
    .loader-wrapper: .loader
    p= t('forum.status.destroying')
  .status.error
    p= t('forum.status.error')
