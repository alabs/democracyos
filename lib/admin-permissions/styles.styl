.admin-permissions
  position relative
  min-height 300px

.admin-permissions-role
  .add-permission
    clear both

.admin-permissions-user
  display flex
  flex-wrap wrap
  align-items center
  align-content center
  margin-bottom .5em
  padding .5em
  font-size 1em
  border-radius 2px
  background-color #f9f9f9

  img
    width 2.1em

  p
    flex-grow 2
    margin 0 .5em
    font-weight bold

  .btn
    float right
