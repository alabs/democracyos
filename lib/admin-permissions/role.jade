.admin-permissions-role
  .title(data-title)
    h2= t('admin-permissions.roles.' + role + '.title')

  .admin-permissions-users
    each user in users
      .admin-permissions-user.clearfix
        img(src=user.avatar)
        p(title=user.displayName)= user.displayName
        button.btn.btn-danger(type='button')= t('admin-permissions.remove')
