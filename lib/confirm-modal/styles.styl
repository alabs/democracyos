.confirm-modal
  position absolute
  top 50%
  left 50%
  margin 0 !important
  padding 1em
  max-width 90%
  max-width calc(100% - 2em)
  min-width 0
  width 380px
  -webkit-transform s('translate(-50%, -50%)')
  -ms-transform s('translate(-50%, -50%)')
  transform s('translate(-50%, -50%)')
  border-radius 2px
  background #fff

  .close
    position absolute
    right .6em
    top .5em

  h3
    margin-top .4em

  .nanoModalButtons
    border-top none

